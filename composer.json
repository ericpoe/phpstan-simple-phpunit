{
    "name": "ericpoe/phpstan-simple-phpunit",
    "description": "A test of using simple-phpunit with phpstan",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Eric Poe",
            "email": "eric.poe@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.2"
    },
    "require-dev": {
        "phpstan/extension-installer": "^1.0",
        "phpstan/phpstan": "^0.12.42",
        "phpstan/phpstan-phpunit": "^0.12.16",
        "symfony/phpunit-bridge": "^5.1"
    },
    "config": {
        "sort-packages": true
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "stan": "phpstan analyse",
        "test": "simple-phpunit"
    }
}
